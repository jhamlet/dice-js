/*globals CLEAN, FileList, file, sh, task */

var prereqs = new FileList("lib/*");

CLEAN.include("dice-min.js");

file("dice-min.js", prereqs, function (t) {
    sh("infuse lib/dice.js " + t.name + (t.exists ? " -F" : "") + " -E");
});

task("default", ["dice-min.js"]);

task("test", ["dice-min.js"], function (t) {
    sh("mocha test/test-min.js", function (results) {
        console.log(results);
    });
});